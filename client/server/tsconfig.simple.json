{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019"],
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": [
    "src/simple-server.ts",
    "src/ai-service.ts",
    "src/config/database.ts",
    "src/database/**/*",
    "src/utils/logger.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/index.ts",
    "src/middleware/**/*",
    "src/routes/**/*",
    "src/services/**/*"
  ]
}


